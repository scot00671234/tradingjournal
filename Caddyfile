# CoinFeedly Production Caddy Configuration

coinfeedly.com {
    # Reverse proxy to Node.js application
    reverse_proxy localhost:3000

    # Enable logging
    log {
        output file /var/log/caddy/coinfeedly.log {
            roll_size 10mb
            roll_keep 5
        }
        format json
    }

    # Security headers
    header {
        # HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Content Security Policy
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.stripe.com; frame-src https://js.stripe.com"
        # Remove server info
        -Server
    }

    # Handle health checks
    handle /api/health {
        reverse_proxy localhost:3000
    }

    # Handle API routes
    handle /api/* {
        reverse_proxy localhost:3000
    }

    # Handle all other routes (SPA fallback)
    handle {
        reverse_proxy localhost:3000
    }
}

# Redirect www to non-www
www.coinfeedly.com {
    redir https://coinfeedly.com{uri} permanent
}

# Global options
{
    # Email for Let's Encrypt
    email admin@coinfeedly.com
    
    # Use production ACME server
    acme_ca https://acme-v02.api.letsencrypt.org/directory
    
    # Admin endpoint (disabled for security)
    admin off
}